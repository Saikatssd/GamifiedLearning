<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="custom1.css"> -->
    <script src="https://kit.fontawesome.com/ee27ae787a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="logout.css">
    <title>Logout</title>
</head>

<body>
    <header id="header">
        <div class="navbar">
            <div class="user ">
                <i class="fa-solid fa-user"></i>
            </div>
            <h2><%= locals.name %> </h2>

            <div class="menu">
                <ul>
                    <li>Settings</li>
                    <!-- <li>Username</li>
                    <li>Change Password</li> -->
                    <li>Coins</li>
                    <li> <form action="/logout" method="get">
                        <button class="submit-btn" type="submit">Logout</button>
                    </form></li>
                </ul>
            </div>
        </div>
    </header>
    <div class="dashbar-header">
        <button type="button" class="mobile-nav-toggle d-xl-none">
            <i class=" fa-sharp fa-solid fa-bars"></i>
        </button>
        
    </div>
    
    <!-- <div class="logout-header">
        <h1>Hi,    <%= name %>
        </h1>
        <form action="/logout" method="get">
            <button class="submit-btn" type="submit">Logout</button>
        </form>

    </div> -->

    <div class="container">
        <div class="img-box">
            <p class="img-descrip"> Want to Study</p>
            <a href="/study" class="image"><img
                    src="https://gifdb.com/images/high/animated-woman-study-hard-space-book-v5dvi9m0o0ndlarn.gif"></a>
        </div>
        <!-- <div class="thunder">
            <img src="https://www.shutterstock.com/shutterstock/videos/1090121651/thumb/1.jpg?ip=x480" alt="">
        </div> -->
        <div class="img-box">
            <p class="img-descrip"> Want to Play</p>
            <a href="/play" class="image"><img src="https://www.icegif.com/wp-content/uploads/video-games-icegif-1.gif"
                    alt=""></a>

        </div>
    </div>

    <script>

        let mobileNav = document.querySelector('.mobile-nav-toggle');
        let header = document.getElementById('header');
        let mobileNavIcon = document.querySelector('.mobile-nav-toggle i');


        mobileNav.addEventListener('click', () => {
            mobileNavIcon.classList.toggle('fa-xmark');
            if (mobileNavIcon.getAttribute('class') == 'fa-sharp fa-solid fa-bars') {
                header.style.left = '-30rem';
                header.style.transition='.9s ease-in-out';
                mobileNav.style.marginLeft='0px';
            }
            else {
                header.style.transition='.9s ease-in-out';
                header.style.left = '0rem';
                mobileNav.style.marginLeft='220px';
            }

        })

    </script>
</body>

</html>